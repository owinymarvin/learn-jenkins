pipeline {
    agent any

    environment {
        REACT_APP_VERSION = "1.0.${env.BUILD_ID}"
    }

    stages {
        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build --build-arg REACT_APP_VERSION_ARG=${REACT_APP_VERSION} -t my-playwright-app ."
                }
            }
        }
    }
}